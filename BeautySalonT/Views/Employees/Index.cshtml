@model BeautySalonT.ViewModels.EmployeeServiceViewModel@{    ViewData["Title"] = "Index";}<h1>Index</h1><p>    <a asp-action="Create">Create New</a></p><form asp-controller="Employees" asp-action="Index" method="get">    <p>        Service:        <select asp-for="Services" asp-items="Model.Services">            <option value="">All</option>        </select>        <input type="submit" value="Filter" />    </p></form><table class="table">    <thead>        <tr>            <th>                Name            </th>            <th>                @Html.DisplayNameFor(model => model.Employees[0].Licence)            </th>            <th>                @Html.DisplayNameFor(model => model.Employees[0].OfficeNumber)            </th>            <th>                @Html.DisplayNameFor(model => model.Employees[0].HireDate)            </th>            <th>                Services            </th>            <th></th>        </tr>    </thead>    <tbody>        @foreach (var item in Model.Employees)        {            <tr>                <td>                    <img src="~/images/@item.ProfilePicture"                         class="rounded-circle"                         height="40" width="40"                         asp-append-version="true" />                    @Html.DisplayFor(modelItem => item.FullName)                </td>                <td>                    @Html.DisplayFor(modelItem => item.Licence)                </td>                <td>                    @Html.DisplayFor(modelItem => item.OfficeNumber)                </td>                <td>                    @Html.DisplayFor(modelItem => item.HireDate)                </td>                <td>                    @foreach (var service in item.Services)                    {                        <a asp-controller="Services" asp-action="Details" asp-route-id="@service.ServiceId">@service.Service.Title</a> <br />                    }                </td>                <td>                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>                </td>            </tr>        }    </tbody></table>